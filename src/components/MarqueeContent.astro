---
import { Image } from 'astro:assets';

const { imgUrl, direction } = Astro.props;
---

<style>
	.up,
	.down {
		animation: var(--direction) 60s linear infinite;
	}

	@keyframes up {
		0% {
			transform: translateY(-300%);
		}
		100% {
			transform: translateY(0);
		}
	}

	@keyframes down {
		0% {
			transform: translateY(300%);
		}
		100% {
			transform: translateY(0);
		}
	}
</style>

<Image
	src={imgUrl}
	alt='Portfolio image'
	border='stone-800'
	border-x-6
	border-y-2
	loading='eager'
	h='26 sm:28 md:20 lg:24 xl:34'
	w='26 sm:28 md:20 lg:24 xl:34'
	class={`${direction} aspect-video object-cover`}
	style={`--direction: ${direction}`}
/>
