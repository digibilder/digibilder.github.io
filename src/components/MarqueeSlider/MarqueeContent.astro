---
// Removed the import of Image from astro:assets
const { imgUrl, direction } = Astro.props;
---

<style>
	.up {
		animation: up 60s linear infinite;
	}

	.down {
		animation: down 60s linear infinite;
	}

	@keyframes up {
		0% {
			transform: translateY(-300%);
		}
		100% {
			transform: translateY(0);
		}
	}

	@keyframes down {
		0% {
			transform: translateY(300%);
		}
		100% {
			transform: translateY(0);
		}
	}
</style>

<img
	src={imgUrl}
	alt='Hero'
	loading='eager'
	class=`${direction} aspect-video object-cover h-26 sm:h-28 md:h-20 lg:h-24 xl:h-34 w-26 sm:w-28 md:w-20 lg:w-24 xl:w-34 border-stone-800 border-x-6 border-y-2`
/>
